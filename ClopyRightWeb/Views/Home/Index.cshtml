@model ClopyRightWeb.Models.HomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h1>ClopyRight <img src="~/Content/img/test/counter2.gif" /></h1>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Beer Finder - search 56,098 beers and 1,570,000 reviews!</legend>
             @if (Model != null && Model.BeerRecommendations != null && Model.BeerRecommendations.Any())
             {
                 <img src="http://www.rickadam.info/animations/scroll-down.gif" />
             }
            <label>Keywords (e.g. ginger)</label>
            @Html.EditorFor(model => model.Keyword)
            <br />
            <br />
            <label>Appearance</label><input type="text" name="MinAppearance" class="slider" value="@Model.MinAppearance" data-slider-min="0" data-slider-max="5" data-slider-step="0.5" data-slider-value="@Model.MinAppearance" data-slider-orientation="horizontal" data-slider-selection="after" data-slider-tooltip="show">
                                     <br />
                                     <br />
                                     <label>Aroma</label><input type="text" name="MinAroma" class="slider" value="@Model.MinAroma" data-slider-min="0" data-slider-max="5" data-slider-step="0.5" data-slider-value="@Model.MinAroma" data-slider-orientation="horizontal" data-slider-selection="after" data-slider-tooltip="show">
                                                         <br />
                                                         <br />
                                                         <label>Palate</label><input type="text" name="MinPalate" class="slider" value="@Model.MinPalate" data-slider-min="0" data-slider-max="5" data-slider-step="0.5" data-slider-value="@Model.MinPalate" data-slider-orientation="horizontal" data-slider-selection="after" data-slider-tooltip="show">
                                                                              <br />
                                                                              <br />
                                                                              <label>Taste</label><input type="text" name="MinTaste" class="slider" value="@Model.MinTaste" data-slider-min="0" data-slider-max="5" data-slider-step="0.5" data-slider-value="@Model.MinTaste" data-slider-orientation="horizontal" data-slider-selection="after" data-slider-tooltip="show">
                                                                                                  <br />
                                                                                                  <br />
                                                                                                  <label>Overall</label><input type="text" name="MinOverall" class="slider" value="@Model.MinOverall" data-slider-min="0" data-slider-max="5" data-slider-step="0.5" data-slider-value="@Model.MinOverall" data-slider-orientation="horizontal" data-slider-selection="after" data-slider-tooltip="show">
        </fieldset>
        <br />
        <button type="submit" class="btn btn-primary btn-large">Submit</button><br />
        <br />
        
    }

    @if (Model != null && Model.BeerRecommendations != null && Model.BeerRecommendations.Any())
    {
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Scores</th>
                    <th>Review</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var recommendation in Model.BeerRecommendations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => recommendation.Beer.BeerName)
                        </td>
                        <td>Appearance:&nbsp;@Html.DisplayFor(model => recommendation.Review.ReviewAppearance)<br />
                            Aroma:&nbsp;@Html.DisplayFor(model => recommendation.Review.ReviewAroma)<br />
                            Palate:&nbsp;@Html.DisplayFor(model => recommendation.Review.ReviewPalate)<br />
                            Taste:&nbsp;@Html.DisplayFor(model => recommendation.Review.ReviewTaste)<br />
                            Overall:&nbsp;@Html.DisplayFor(model => recommendation.Review.ReviewOverall)<br />
                        </td>
                        <td>
                            @Html.DisplayFor(model => recommendation.Review.ReviewText)
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }

</div>
<img src="~/Content/img/test/ie_logo.gif" /><img src="~/Content/img/test/ns_logo.gif" />

<script type="text/javascript">
    $(document).ready(function () {
        $('.slider').slider();
    });
</script>
